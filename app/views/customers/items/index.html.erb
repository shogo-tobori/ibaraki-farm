<div class="row text-center">
  <div class="col-md-9 col-md-offset-1">
    <h1>商品ご紹介 <span style="font-size: 20px;"><%= @items.count %>件</span></h1>
    <div class="row">
      <% @items.each do |item| %>
        <div class="col-md-4">
          <% if item.genre.is_valid == true && item.sale_status == true %>
            <%= link_to customers_item_path(item), :style=> "color:white;" do %>
              <%= attachment_image_tag item, :image, format: 'jpeg', size:"200x150" %>
              <p><%= item.name %></p>
            <% end %>
            <p>【商品紹介】<br>
            <%= item.explanation %></p>
          <% elsif item.sale_status == false %>
            <%= attachment_image_tag item, :image, format: 'jpeg', size:"200x150" %>
            <p><%= item.name %></p>
            <p style="background-color: white; color: red; width: 40%;">売り切れ</p>
          <% elsif item.genre.is_valid == false %>
            <%= image_tag 'あつかいない.png', :size => '200x150' %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="text-center">
      <%= paginate @items %>
    </div>
  </div>
</div>