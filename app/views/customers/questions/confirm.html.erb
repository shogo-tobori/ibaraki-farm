<div class="page-header">
  <h1>お問い合わせ</h1>
</div>

<%= form_for @question, :url => customers_questions_thanks_path do |f| %>
  <table class="table">
    <tr>
      <th>名前</th>
      <td>
        <%= f.hidden_field :name %>
        <%= @question.name %>
      </td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td>
        <%= f.hidden_field :email %>
        <%= @question.email %>
      </td>
    </tr>
    <tr>
      <th>お問い合わせ内容</th>
      <td>
        <%= f.hidden_field :message %>
        <%= simple_format(@question.message) %>
      </td>
    </tr>
  </table>
  <%= f.submit '送信', :class => 'btn btn-danger' %>
<% end %>